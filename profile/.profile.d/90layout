layout() {
	source $HOME/.screenlayout/$1.sh
	cat $HOME/.fehbg | bash
}

_layout() {
	local cur prev opts
	COMPREPLY=()
	cur="${COMP_WORDS[COMP_CWORD]}"
	prev="${COMP_WORDS[COMP_CWORD-1]}"
	opts=$(basename -s .sh -a $HOME/.screenlayout/*.sh)

	COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
	return 0
}

complete -F _layout layout
